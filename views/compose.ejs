<%- include("partials/header") %>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="postTitle" id="title" class="form-control" autocomplete="off">      
    </div>
    <div class="form-group">
        <label for="post"  class="form-label">Post</label>
        <textarea class="form-control" name="postBody" id="post" rows="3"></textarea>

    </div>
        <button type="submit"  class="btn btn-primary mb-3">Publish</button>
</form>

