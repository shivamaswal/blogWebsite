<%- include("partials/header") %>

<h1>Home</h1>
<p><%=homeStartContent %></p>

<% posts.forEach(function(post){ %>
    <div>
        <h1><%= post.postTitle %></h1>
        <% var truncatedString = post.postBody.substring(0,50) + "..."; %>
        <p><%= truncatedString %></p>
        <a href="/post/+<%= post.postTitle %>">Read More.</a>
    </div>
<% }); %>

<%- include("partials/footer") %>




